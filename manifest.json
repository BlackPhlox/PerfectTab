{
  "manifest_version": 2,
  "name": "Perfect Tab",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "ct.png"
  },
  "chrome_url_overrides" : {
    "newtab": "./index.html"
  },
  "permissions": [
	  "bookmarks"
  ]
}